{
  "name": "idborm",
  "version": "0.1.1",
  "description": "A super simple and minimalist ORM built on top of IndexedDB that makes IndexedDB usable",
  "author": "Pouria Tajdivand<tajpouria.dev@gmail.com>",
  "bin": {
    "idborm": "./bin/idborm.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "lib"
  ],
  "scripts": {
    "test": "jest --collectCoverage",
    "build": "rollup -c",
    "stand-alone": "webpack --mode production --config=webpack.config.js",
    "docs": "typedoc --readme README.docs.md --includeVersion --excludePrivate --excludeProtected --exclude \"**/*+(index|IDBVersionController).ts\" --out docs src/IDB.ts src/IDBObject.ts && cp _config.yml docs/",
    "lint": "eslint -c .eslintrc.yml --fix src/**/*.ts bin/**/*.js examples/**/*.ts",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@types/jest": "^24.0.25",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "fake-indexeddb": "^3.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rollup": "^1.29.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "typedoc": "^0.16.6",
    "typescript": "^3.7.4",
    "webpack": "4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "idb": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tajpouria/idborm"
  },
  "homepage": "https://tajpouria.github.io/idborm/",
  "keywords": [
    "indexeddb",
    "idb",
    "browser",
    "database",
    "service worker",
    "react",
    "angular",
    "vue"
  ],
  "license": "MIT",
  "engines": {
    "node": "^8.10.0 || ^10.13.0 || >=11.10.1"
  }
}
